@model PhoneBook.UI.Models.UserModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>UserModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Surname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EmailAddress)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EmailAddress)
        </dd>        
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("New PhoneBook", "Create","UserPhoneBook", new { id = Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    PhoneBooks
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PhoneBooks)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>                   

                    <td>
                        @Html.ActionLink("Edit", "Edit",nameof(UserPhonebook), new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", nameof(UserPhonebook), new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", nameof(UserPhonebook), new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

