@model PhoneBook.UI.Models.UserPhonebook

@{
    ViewData["Title"] = "Create";
}

<h1 class="title">Edit Phonebook</h1>

<hr />
<div class="container">
    <div class="columns is-left">
        <div class="column is-5-tablet is-4-desktop is-3-widespread">            
            <form class="box" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="help is-danger"></div>
            @Html.HiddenFor(x => x.UserId)
            <div class="field">
                <label asp-for="Name" class="label"></label>
                <input asp-for="Name" class="control" />
                <span asp-validation-for="Name" class="help is-danger"></span>
            </div>

            <div class="field">
                <input type="submit" value="Save" class="button is-primary" />
                <button type="submit" value="Cancel" class="button"/>
            </div>
        </form>
        </div>        
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
