@model PhoneBook.UI.Models.Contact

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>ContactModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lastname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lastname)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("New Number", "Create","TelephoneNumber", new { id = Model.Id }) |

    <a asp-action="Details" asp-controller="UserPhoneBook" asp-route-id="@Model.PhoneBookId">Back to List</a>
</div>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Phone Numbers
                </th>
                <th>
                    Type
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PhoneNumbers)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberType)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", nameof(TelephoneNumber), new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", nameof(TelephoneNumber), new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", nameof(TelephoneNumber), new { id = item.Id })
                </td>
            </tr>
            }
        </tbody>
    </table>

</div>
