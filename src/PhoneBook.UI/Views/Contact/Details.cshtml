@model PhoneBook.UI.Models.Contact

@{
    ViewData["Title"] = "Details";
}

<h1 class="title">Details for Contact @Model.FirstName @Model.Lastname</h1>

<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new {@class="button is-small"}) |
    @Html.ActionLink("New Number", "Create","TelephoneNumber", new { id = Model.Id }, new {@class="button is-small"}) |
    @Html.ActionLink("Back to PhoneBooks", "Index","UserPhoneBook", new { id = Model.Id }, new {@class="button is-small"}) |

    <a asp-action="Details" asp-controller="UserPhoneBook" asp-route-id="@Model.PhoneBookId">Back to List</a>
</div>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Phone Numbers
                </th>
                <th>
                    Type
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PhoneNumbers)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberType)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", nameof(TelephoneNumber), new { id = item.Id }, new {@class="button is-small"}) |
                    @Html.ActionLink("Details", "Details", nameof(TelephoneNumber), new { id = item.Id }, new {@class="button is-small"}) |
                    @Html.ActionLink("Delete", "Delete", nameof(TelephoneNumber), new { id = item.Id }, new {@class="button is-small is-danger"})
                </td>
            </tr>
            }
        </tbody>
    </table>

</div>
